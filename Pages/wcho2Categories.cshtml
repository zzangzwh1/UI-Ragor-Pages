@page
@model UI_Ragor_Pages.Pages.wcho2CategoriesModel

@{


}

<Doctype html>
    <head>
        <meta charset="utf-8" />
        <title>Northwind database</title>
        <style>
            .border-Tabe {
                width: 50%;
                border: 1px solid #000;
            }

                .border-Tabe tr {
                    border: 1px solid #000;
                }

                .border-Tabe td {
                    border: 1px solid #000;
                    padding: 8px;
                    text-align: center;
                }

        </style>
    </head>
    <body>

        <table class="border-Tabe">
            <tr>
                @foreach (var columnName in Model.ColumnNames)
                {
                    <td>@columnName</td>

                }
            </tr>

            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.CategoryName</td>
                    <td>@category.Description</td>
                    <td><img src="data:image/jpeg;base64,@category.Picture" alt="Category Image" width="200" height="150" /></td>
                </tr>
            }

        </table>

    </body>

</Doctype>