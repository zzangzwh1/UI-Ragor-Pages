}


<Doctype html>
    <head>
        <meta charset="utf-8" />
        <title>Northwind database</title>
        <style>
            .border-Tabe {
                width: 100%;
            }

                .border-Tabe tr {
                    border: 1px solid #000;
                }

                .border-Tabe td {
                    border: 1px solid #000;
                    padding: 8px;
                    text-align: left;
                }
        </style>
    </head>
    <body>
        <h1>fdsfds</h1>
        <table class="border-Tabe">
            <tr>
                @foreach (var columnName in Model.ColumnNames)
                {
                    <td>@columnName</td>

                }
            </tr>

            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.CategoryName </td>
                    <td>@category.Description</td>
                    <td><img src="data:image/jpeg;base64,@category.Picture" alt="Image" width="100" height="100" /></td>
                    
                    <td>@category.Picture</td>
                </tr>
            }

        </table>

        <table>
            <tr>
                @foreach (var columnName in Model.testColumnNames)
                {
                    <td>@columnName</td>

                }
            </tr>

            @foreach (var category in Model.testCategories)
            {
                <tr>
                    <td>@category.CategoryName </td>
                    <td><img src="data:image/jpeg;base64,@Convert.ToBase64String(category.ImageData)" alt="TestImage" width="100" height="100" /></td>
                    <td><img src="data:image/JPEG;base64,@Model.Test2" alt="TestImage" width="100" height="100" /></td>
                    <td><img src="data:image/JPEG;base64,/@Model.result" alt="TestImage" width="100" height="100" /></td>
                    <td><img src="data:image/JPEG;base64,@Model.Test" alt="TestImage" width="100" height="100" /></td>
                    <td><img src="data:image/JPEG;base64,/@Model.Test" alt="TestImage" width="100" height="100" /></td>
                    <td><img src="data:image/JPEG;base64,;" width="100" height="100" /></td>
                </tr>
            }
        </table>

    </body>

