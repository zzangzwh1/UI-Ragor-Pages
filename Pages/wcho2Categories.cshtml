<Doctype html>
    <head>
        <meta charset="utf-8" />
        <title>Northwind database</title>
        <style>
            .border-Tabe {
                width: 100%;
            }

                .border-Tabe tr {
                    border: 1px solid #000;
                }

                .border-Tabe td {
                    border: 1px solid #000;
                    padding: 8px;
                    text-align: left;
                }


            .image-container {
                width: 200px; /* Adjust the width as needed */
                height: 150px; /* Adjust the height as needed */
                overflow: hidden; /* Hide any overflow */
            }

                .image-container img {
                    max-width: 100%;
                    max-height: 100%;
                    object-fit: cover; /* Adjust this to 'contain' or 'cover' based on your preference */
                }
        </style>
    </head>
    <body>
        <h1>fdsfds</h1>
        <table class="border-Tabe">
            <tr>
                @foreach (var columnName in Model.ColumnNames)
                {
                    <td>@columnName</td>

                }
            </tr>

            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.CategoryName </td>
                    <td>@category.Description</td>
                    <td><img src="data:image/jpeg;base64,@category.Picture" alt="Image" width="100" height="100" /></td>
                    
                    <td>@category.Picture</td>
                </tr>
            }
