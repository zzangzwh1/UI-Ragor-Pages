@page
@model UI_Ragor_Pages.Pages.wcho2CategoriesModel
@{
}


<Doctype html>
    <head>
        <meta charset="utf-8" />
        <title>Northwind database</title>
        <style>
            .border-Tabe {
                width: 100%;
            }

                .border-Tabe tr {
                    border: 1px solid #000;
                }

                .border-Tabe td {
                    border: 1px solid #000;
                    padding: 8px;
                    text-align: left;
                }
        </style>
    </head>
    <body>
        <h1>fdsfds</h1>
        <table class="border-Tabe">
            <tr>
                @foreach (var columnName in Model.ColumnNames)
                {
                    <td>@columnName</td>

                }
            </tr>

            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.CategoryName </td>
                    <td>@category.Description</td>
                    <td><img src="data:image/jpeg; base64,@category.Picture" alt="Image" width="300" height="300" /></td>
                </tr>
            }

        </table>

    </body>

</Doctype>